{
	"manifest_version": 2,
	"name": "AERGO Wallet",
	"version": "0.0.1",
	"description": "AERGO Wallet Browser Extension",
	"author": "Aergo team and contributors",
	"homepage_url": "https://github.com/aergoio/wallet-extension#readme",
	"minimum_chrome_version": "64",
	"minimum_opera_version": "51",

	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

	"icons": {
		"17": "27c8b3a52ec7ff171a36ab5196bb477c.png",
		"102": "964e16ccf5411f734082f56b4c027b45.png"
	},
	
	"background": {
		"page": "background.html",
		"persistent": true
	},

	"browser_action": {
		"default_icon": {
		  "17": "27c8b3a52ec7ff171a36ab5196bb477c.png",
		  "34": "e38302ac8e3c86895a755c6be89aa407.png"
		},
		"default_title": "AERGO Wallet",
		"default_popup": "popup.html"
	},

	"content_scripts": [{
		"matches": [
			"file://*/*",
			"http://*/*",
			"https://*/*"
		],
		"js": [
			"content-script.js"
		],
		"run_at": "document_start",
		"all_frames": true
	}],

	"permissions": [
		"activeTab",
		"storage",
		"unlimitedStorage",
		"clipboardWrite",
		"notifications",
		"contextMenus"
	]
}
