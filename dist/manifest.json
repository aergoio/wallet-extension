{
	"manifest_version": 2,
	"name": "AERGO Wallet",
	"version": "0.0.1",
	"description": "AERGO Wallet Browser Extension",
	"author": "Aergo team and contributors",
	"homepage_url": "https://github.com/aergoio/wallet-extension#readme",
	"minimum_chrome_version": "64",
	"minimum_opera_version": "51",

	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

	"icons": {
		"17": "47c549804dd70500108560cc24bca5f3.png",
		"102": "0da81dee4755822e45e812c8ce30d733.png"
	},
	
	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": true
	},

	"browser_action": {
		"default_icon": {
		  "17": "47c549804dd70500108560cc24bca5f3.png",
		  "34": "20bc6432e45b1731a33f0f1ed4c1fead.png"
		},
		"default_title": "AERGO Wallet",
		"default_popup": "popup.html"
	},

	"content_scripts": [{
		"matches": [
			"file://*/*",
			"http://*/*",
			"https://*/*"
		],
		"js": [
			"content-script.js"
		],
		"run_at": "document_start",
		"all_frames": true
	}],

	"permissions": [
		"activeTab",
		"storage",
		"unlimitedStorage",
		"clipboardWrite",
		"notifications"
	]
}
